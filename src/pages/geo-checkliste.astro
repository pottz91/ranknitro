---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_URL } from '../consts';
import { breadcrumbListSchema, webPageSchema } from '../utils/schema';

const title = 'GEO-Checkliste – kostenloses PDF + GEO-Analyse';
const description =
	'Die 20 wichtigsten Kriterien für GEO/AEO: Checkliste für Inhalte, die von Such- und Answer-Engines verstanden und ausgespielt werden. Kostenloses PDF + Video-Analyse.';
const siteUrl = Astro.site?.href ?? SITE_URL;
const pageUrl = new URL('/geo-checkliste/', siteUrl).href;
const webPageJsonLd = webPageSchema(siteUrl, pageUrl, `GEO-Checkliste – ${SITE_TITLE}`, description);
const breadcrumbJsonLd = breadcrumbListSchema(siteUrl, [
	{ name: 'Start', url: '/' },
	{ name: 'GEO-Checkliste', url: '/geo-checkliste/' },
]);

---

<!doctype html>
<html lang="de">
	<head>
		<BaseHead title={`GEO-Checkliste – ${SITE_TITLE}`} description={description} />
		<script type="application/ld+json" set:html={JSON.stringify(webPageJsonLd)} />
		<script type="application/ld+json" set:html={JSON.stringify(breadcrumbJsonLd)} />
		<style>
			.geo-page {
				background: #FFFFFF;
				color: #010208;
				position: relative;
				min-height: 100vh;
			}
			.geo-page::before {
				content: '';
				position: fixed;
				inset: 0;
				background: url('/geo-bg.png') center center / cover no-repeat;
				opacity: 0.05;
				pointer-events: none;
				z-index: 0;
			}
			.geo-page main {
				position: relative;
				z-index: 1;
				max-width: 820px;
				margin: 0 auto;
				padding: 2rem 1.5rem 4rem;
			}
			.geo-headline-block {
				text-align: center;
				margin-bottom: 2rem;
			}
			.geo-subtitle {
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				font-size: 0.75rem;
				letter-spacing: 0.08em;
				text-transform: uppercase;
				color: #010208;
				opacity: 0.7;
				margin: 0 0 0.5rem 0;
			}
			.geo-page h1 {
				font-family: "Montserrat", sans-serif;
				font-weight: 800;
				font-size: clamp(1.15rem, 3vw, 1.6rem);
				line-height: 1.3;
				margin: 0 0 0.75rem 0;
			}
			.geo-page .geo-subheadline {
				font-family: "Source Sans 3", sans-serif;
				font-size: 1rem;
				line-height: 1.6;
				margin: 0 auto;
				max-width: 640px;
			}
			.geo-matrix-box {
				background: #FFFFFF;
				padding: 0;
				margin: 0 0 2rem 0;
				text-align: center;
				box-shadow: 0 4px 20px rgba(1, 2, 8, 0.12), 0 8px 40px rgba(1, 2, 8, 0.08);
				border-radius: 8px;
				overflow: hidden;
			}
			.geo-matrix-image {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 0;
			}
			.geo-cta-wrap { text-align: center; margin: 2rem 0 0.5rem 0; }
			.geo-cta {
				display: inline-block;
				padding: 1rem 2rem;
				background: #EA580C;
				color: #FFFFFF;
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				font-size: 1rem;
				text-decoration: none;
				border: 2px solid #EA580C;
				border-radius: 0;
				box-shadow: 0 2px 12px rgba(234, 88, 12, 0.35);
				transition: background 0.2s, color 0.2s, border-color 0.2s, box-shadow 0.2s;
			}
			.geo-cta:hover {
				background: #FFFFFF;
				color: #EA580C;
				border-color: #EA580C;
				box-shadow: 0 2px 12px rgba(234, 88, 12, 0.2);
			}
			.geo-disclaimer {
				font-family: "Source Sans 3", sans-serif;
				font-size: 0.8rem;
				color: #010208;
				opacity: 0.8;
				text-align: center;
				margin: 0;
			}
		</style>
	</head>
	<body class="geo-page">
		<Header />
		<main>
			<div class="geo-headline-block">
				<p class="geo-subtitle">Kostenloses PDF + GEO-Analyse (Video)</p>
				<h1>
					Warum klassisches SEO für B2B-Dienstleister & Online-Shops zur <strong>Umsatzbremse</strong> wird und wie du durch GEO bis zu <strong>4x mehr Leads</strong> über KI-Systeme gewinnst!
				</h1>
				<p class="geo-subheadline">
					Statt auf Google-Rankings zu warten: Erfahre, wie du dich in ChatGPT & AI Overviews als <strong>Top-Empfehlung</strong> platzierst und deine Lead-Qualität um bis zu <strong>250% steigern</strong> kannst.
				</p>
			</div>

			<div class="geo-matrix-box">
				<img
					src="/geo-matrix.webp"
					alt="Ranknitro GEO-Matrix – Die 20 wichtigsten Kriterien für GEO/AEO"
					class="geo-matrix-image"
					width="800"
					height="450"
				/>
			</div>

			<div class="geo-cta-wrap" id="geo-audit">
				<a href="#geo-audit" class="geo-cta">Jetzt kostenlos ansehen!</a>
			</div>
			<p class="geo-disclaimer">Achtung: Nur noch für kurze Zeit verfügbar!</p>
		</main>
		<Footer />
	</body>
</html>
