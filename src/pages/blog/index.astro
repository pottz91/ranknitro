---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { MAIN_CATEGORY_SLUG, SUBCATEGORIES } from '../../data/blog-categories';
import { SITE_DESCRIPTION, SITE_TITLE, SITE_URL } from '../../consts';
import {
	blogSchema,
	breadcrumbListSchema,
	webPageSchema,
} from '../../utils/schema';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const siteUrl = Astro.site?.href ?? SITE_URL;
const blogUrl = new URL('/blog/', siteUrl).href;
const blogJsonLd = blogSchema(
	siteUrl,
	`Blog – ${SITE_TITLE}`,
	'SEO, GEO und Suchmaschinen-Marketing – Tipps und Strategien für bessere Rankings.',
	blogUrl
);
const webPageJsonLd = webPageSchema(
	siteUrl,
	blogUrl,
	`Blog – ${SITE_TITLE}`,
	SITE_DESCRIPTION
);
const breadcrumbJsonLd = breadcrumbListSchema(siteUrl, [
	{ name: 'Start', url: '/' },
	{ name: 'Blog', url: '/blog/' },
]);
---

<!doctype html>
<html lang="de">
	<head>
		<BaseHead title={`Blog – ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<script type="application/ld+json" set:html={JSON.stringify(blogJsonLd)} />
		<script type="application/ld+json" set:html={JSON.stringify(webPageJsonLd)} />
		<script type="application/ld+json" set:html={JSON.stringify(breadcrumbJsonLd)} />
		<style>
			body { background: #FFFFFF; }
			.blog-page main {
				background: #FFFFFF;
				max-width: 960px;
				margin: 0 auto;
				padding: 3rem 1.5rem;
				box-sizing: border-box;
			}
			.blog-page .intro h1 {
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				color: #010208;
			}
			.blog-page .intro p {
				font-family: "Source Sans 3", sans-serif;
				line-height: 1.6;
				color: #010208;
			}
			.category-nav {
				list-style: none;
				margin: 0 0 2rem 0;
				padding: 0;
			}
			.category-nav > li {
				margin: 0;
			}
			.category-nav > li > a {
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				font-size: 1.1rem;
				color: #010208;
				text-decoration: none;
			}
			.category-nav > li > a:hover {
				text-decoration: underline;
			}
			.subcategory-list {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem 1rem;
				list-style: none;
				margin: 0.5rem 0 0 0;
				padding: 0;
			}
			.subcategory-list a {
				font-family: "Source Sans 3", sans-serif;
				font-weight: 700;
				color: #010208;
				text-decoration: none;
				padding: 0.35rem 0.6rem;
				border: 1px solid #010208;
				background: #FFFFFF;
			}
			.subcategory-list a:hover {
				background: #010208;
				color: #FFFFFF;
			}
			.blog-grid {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.blog-grid li {
				width: calc(50% - 1rem);
			}
			.blog-grid li:first-child {
				width: 100%;
			}
			.blog-card {
				display: block;
				text-decoration: none;
				background: #FFFFFF;
				border: 1px solid #000000;
				border-radius: 0;
				overflow: hidden;
				transition: border-color 0.2s ease, background 0.2s ease;
			}
			.blog-card:hover {
				border-color: #010208;
				background: #F8F9FA;
			}
			.blog-card img {
				width: 100%;
				height: auto;
				display: block;
				border-radius: 0;
				border-bottom: 1px solid #000000;
			}
			.blog-card .card-content {
				padding: 1rem 1.25rem;
			}
			.blog-card .title {
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				font-size: 1.25rem;
				margin: 0 0 0.25rem 0;
				color: #010208;
				line-height: 1.2;
			}
			.blog-card .date {
				font-family: "Source Sans 3", sans-serif;
				font-size: 0.9rem;
				line-height: 1.6;
				color: #010208;
				opacity: 0.8;
				margin: 0;
			}
			.blog-card:hover .title,
			.blog-card:hover .date {
				color: #010208;
			}
			@media (max-width: 720px) {
				.blog-page main {
					padding: 1.5rem 1rem 2rem;
					max-width: 100%;
				}
				.blog-page .intro h1 {
					font-size: 1.75rem;
				}
				.blog-page .intro p {
					font-size: 0.95rem;
				}
				.blog-grid {
					gap: 1.25rem;
				}
				.blog-grid li {
					width: 100%;
				}
				.blog-card .card-content {
					padding: 1rem;
				}
				.blog-card .title {
					font-size: 1.1rem;
				}
				.blog-card .date {
					font-size: 0.85rem;
				}
			}
		</style>
	</head>
	<body class="blog-page">
		<Header />
		<main>
			<section class="intro">
				<h1>Blog</h1>
				<p>SEO, GEO und Suchmaschinen-Marketing – Tipps und Strategien für bessere Rankings.</p>
			</section>
			<nav aria-label="Kategorien">
				<ul class="category-nav">
					<li>
						<a href={`/blog/category/${MAIN_CATEGORY_SLUG}/`}>SEO</a>
						<ul class="subcategory-list">
							{SUBCATEGORIES.map((sub) => (
								<li>
									<a href={`/blog/category/${MAIN_CATEGORY_SLUG}/${sub.slug}/`}>{sub.label}</a>
								</li>
							))}
						</ul>
					</li>
				</ul>
			</nav>
			<ul class="blog-grid">
				{
					posts.map((post) => {
						const href = `/blog/${post.data.slug ?? post.id}/`;
						return (
						<li>
							<a href={href} class="blog-card">
								{post.data.heroImage && (
									<Image width={720} height={360} src={post.data.heroImage} alt={post.data.title} />
								)}
								<div class="card-content">
									<h2 class="title">{post.data.title}</h2>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</div>
							</a>
						</li>
					);
					})
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
