---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_URL } from '../consts';
import type { BreadcrumbItem } from '../utils/schema';
import {
	blogPostingSchema,
	breadcrumbListSchema,
	webPageSchema,
} from '../utils/schema';

type Props = CollectionEntry<'blog'>['data'] & {
	schemaType?: 'blog' | 'page';
	breadcrumbItems?: BreadcrumbItem[];
	noindex?: boolean;
};

const { title, description, pubDate, updatedDate, heroImage, schemaType = 'blog', breadcrumbItems, noindex } = Astro.props;
const siteUrl = Astro.site?.href ?? SITE_URL;
const pageUrl = new URL(Astro.url.pathname, Astro.site).href;
const imageUrl = heroImage ? new URL(heroImage.src, Astro.site).href : undefined;

const isArticle = schemaType === 'blog';
const articleJsonLd =
	isArticle &&
	blogPostingSchema({
		siteUrl,
		url: pageUrl,
		headline: title,
		description,
		datePublished: pubDate.toISOString(),
		dateModified: updatedDate?.toISOString(),
		imageUrl,
		authorName: SITE_TITLE,
	});
const breadcrumbJsonLd = breadcrumbListSchema(
	siteUrl,
	breadcrumbItems ?? [
		{ name: 'Start', url: '/' },
		{ name: 'Blog', url: '/blog/' },
		{ name: title, url: Astro.url.pathname },
	]
);
const webPageJsonLd = !isArticle && webPageSchema(siteUrl, pageUrl, title, description);
---

<html lang="de">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={heroImage}
			type={isArticle ? 'article' : 'website'}
			publishedTime={isArticle ? pubDate.toISOString() : undefined}
			modifiedTime={isArticle ? updatedDate?.toISOString() : undefined}
			noindex={noindex}
		/>
		{articleJsonLd && <script type="application/ld+json" set:html={JSON.stringify(articleJsonLd)} />}
		<script type="application/ld+json" set:html={JSON.stringify(breadcrumbJsonLd)} />
		{webPageJsonLd && <script type="application/ld+json" set:html={JSON.stringify(webPageJsonLd)} />}
		<style>
			body { background: #FFFFFF; }
			main {
				width: calc(100% - 2em);
				max-width: 960px;
				margin: 0 auto;
				padding: 2rem 1em;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 0;
			}
			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 0;
				border: 1px solid #000000;
			}
			.prose {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
				padding: 1em 0;
				font-family: "Source Sans 3", sans-serif;
				line-height: 1.6;
				color: #010208;
			}
			.prose :global(p) {
				margin-bottom: 1.5em;
			}
			.title-wrap {
				margin-bottom: 2em;
				padding-bottom: 1em;
				border-bottom: 1px solid #000000;
			}
			.title-wrap h1 {
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				font-size: 2.25rem;
				margin: 0 0 0.5em 0;
				color: #010208;
			}
			.date {
				font-family: "Source Sans 3", sans-serif;
				font-size: 0.95rem;
				line-height: 1.6;
				color: #010208;
				opacity: 0.85;
				margin: 0 0 0.5em 0;
			}
			.last-updated-on {
				font-style: italic;
				font-size: 0.9rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<div class="hero-image">
						<Image width={1020} height={510} src={heroImage} alt={title} />
					</div>
				)}
				<div class="prose">
					<div class="title-wrap">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Zuletzt aktualisiert: <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
