---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import GeoChecklistCta from '../components/GeoChecklistCta.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_URL } from '../consts';
import type { BreadcrumbItem } from '../utils/schema';
import {
	blogPostingSchema,
	breadcrumbListSchema,
	webPageSchema,
} from '../utils/schema';

type Props = CollectionEntry<'blog'>['data'] & {
	schemaType?: 'blog' | 'page';
	breadcrumbItems?: BreadcrumbItem[];
	noindex?: boolean;
	/** Blog-Slug für automatisch generiertes Hero/OG-Bild, wenn kein heroImage gesetzt ist. */
	slug?: string;
};

const { title, description, pubDate, updatedDate, heroImage, schemaType = 'blog', breadcrumbItems, noindex, slug } = Astro.props;
const siteUrl = Astro.site?.href ?? SITE_URL;
const pageUrl = new URL(Astro.url.pathname, Astro.site).href;
const generatedImageUrl = slug ? new URL(`/og/blog/${slug}.png`, Astro.site).href : undefined;
const imageUrl = heroImage ? new URL(heroImage.src, Astro.site).href : generatedImageUrl;

const isArticle = schemaType === 'blog';
const articleJsonLd =
	isArticle &&
	blogPostingSchema({
		siteUrl,
		url: pageUrl,
		headline: title,
		description,
		datePublished: pubDate.toISOString(),
		dateModified: updatedDate?.toISOString(),
		imageUrl,
		authorName: SITE_TITLE,
	});
const breadcrumbJsonLd = breadcrumbListSchema(
	siteUrl,
	breadcrumbItems ?? [
		{ name: 'Start', url: '/' },
		{ name: 'Blog', url: '/blog/' },
		{ name: title, url: Astro.url.pathname },
	]
);
const webPageJsonLd = !isArticle && webPageSchema(siteUrl, pageUrl, title, description);
---

<html lang="de">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={heroImage}
			ogImageUrl={!heroImage && generatedImageUrl ? generatedImageUrl : undefined}
			type={isArticle ? 'article' : 'website'}
			publishedTime={isArticle ? pubDate.toISOString() : undefined}
			modifiedTime={isArticle ? updatedDate?.toISOString() : undefined}
			noindex={noindex}
		/>
		{articleJsonLd && <script type="application/ld+json" set:html={JSON.stringify(articleJsonLd)} />}
		<script type="application/ld+json" set:html={JSON.stringify(breadcrumbJsonLd)} />
		{webPageJsonLd && <script type="application/ld+json" set:html={JSON.stringify(webPageJsonLd)} />}
		<style>
			body { background: #FFFFFF; }
			main {
				width: calc(100% - 2em);
				max-width: 960px;
				margin: 0 auto;
				padding: 2rem 1em;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 0;
			}
			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 0;
				border: 1px solid #000000;
			}
			.prose {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
				padding: 1em 0;
				font-family: "Source Sans 3", sans-serif;
				line-height: 1.6;
				color: #010208;
			}
			.prose :global(p) {
				margin-bottom: 1.5em;
			}
			.article-body {
				/* Wrapper für Slot, damit CTA mittig eingefügt werden kann */
			}
			/* „Das Wichtigste auf einen Blick“: Liste nach H2 hervorheben */
			.article-body :global(h2 + ul) {
				border-left: 4px solid #010208;
				padding: 1rem 1rem 1rem 1.25rem;
				margin: 1.25rem 0;
				background: #f5f5f5;
			}
			.article-body :global(h2 + ul li) {
				margin-bottom: 0.5em;
			}
			.article-body :global(code) {
				padding: 0.15em 0.4em;
				border: 1px solid #010208;
				font-size: 0.9em;
				background: #e8e8e8;
				color: #010208;
			}
			.article-body :global(pre) {
				background: #e8e8e8;
				color: #010208;
			}
			.article-body :global(pre code) {
				background: transparent;
				border: none;
				color: inherit;
			}
			.title-wrap {
				margin-bottom: 2em;
				padding-bottom: 1em;
				border-bottom: 1px solid #000000;
			}
			.title-wrap h1 {
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				font-size: 2.25rem;
				margin: 0 0 0.5em 0;
				color: #010208;
			}
			.date {
				font-family: "Source Sans 3", sans-serif;
				font-size: 0.95rem;
				line-height: 1.6;
				color: #010208;
				opacity: 0.85;
				margin: 0 0 0.5em 0;
			}
			.last-updated-on {
				font-style: italic;
				font-size: 0.9rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{(heroImage || generatedImageUrl) && (
					<div class="hero-image">
						{heroImage ? (
							<Image width={1020} height={510} src={heroImage} alt={title} />
						) : (
							<img
								src={`/og/blog/${slug}.png`}
								alt=""
								width={1200}
								height={630}
								fetchpriority="high"
							/>
						)}
					</div>
				)}
				<div class="prose">
					<div class="title-wrap">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Zuletzt aktualisiert: <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					<div class="article-body" id="article-body">
						<slot />
					</div>
					{isArticle && (
						<div id="geo-cta-placeholder" aria-hidden="true">
							<GeoChecklistCta />
						</div>
					)}
				</div>
				{isArticle && (
					<script is:inline>
						(function () {
							var placeholder = document.getElementById('geo-cta-placeholder');
							var articleBody = document.getElementById('article-body');
							if (!placeholder || !articleBody) return;
							var cta = placeholder.firstElementChild;
							if (!cta) return;
							var children = articleBody.children;
							var len = children.length;
							if (len === 0) {
								articleBody.appendChild(cta);
							} else {
								var mid = Math.floor(len / 2);
								articleBody.insertBefore(cta, children[mid]);
							}
							placeholder.remove();
						})();
					</script>
				)}
			</article>
		</main>
		<Footer />
	</body>
</html>
