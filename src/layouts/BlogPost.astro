---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="de">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body { background: #FFFFFF; }
			main {
				width: calc(100% - 2em);
				max-width: 960px;
				margin: 0 auto;
				padding: 2rem 1em;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 0;
			}
			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 0;
				border: 1px solid #000000;
			}
			.prose {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
				padding: 1em 0;
				font-family: "Source Sans 3", sans-serif;
				line-height: 1.6;
				color: #010208;
			}
			.prose :global(p) {
				margin-bottom: 1.5em;
			}
			.title-wrap {
				margin-bottom: 2em;
				padding-bottom: 1em;
				border-bottom: 1px solid #000000;
			}
			.title-wrap h1 {
				font-family: "Montserrat", sans-serif;
				font-weight: 700;
				font-size: 2.25rem;
				margin: 0 0 0.5em 0;
				color: #010208;
			}
			.date {
				font-family: "Source Sans 3", sans-serif;
				font-size: 0.95rem;
				line-height: 1.6;
				color: #010208;
				opacity: 0.85;
				margin: 0 0 0.5em 0;
			}
			.last-updated-on {
				font-style: italic;
				font-size: 0.9rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<div class="hero-image">
						<Image width={1020} height={510} src={heroImage} alt="" />
					</div>
				)}
				<div class="prose">
					<div class="title-wrap">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Zuletzt aktualisiert: <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
